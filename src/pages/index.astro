---
import ProjectSlideshow from "@/components/ProjectSlideshow"
import PostsSection from "@/components/PostsSection"
import Timeline from "@/components/Timeline"
import Avatar from "@/components/Avatar"
import Layout from "@/layouts/Layout.astro"
import { HiOutlineArrowDownCircle as DownIcon } from "react-icons/hi2"
import "@/styles/globals.css"
import { BIO } from "@/content/bio"
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme")
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light"
  }

  const isDark = getThemePreference() === "dark"
  document.documentElement.classList[isDark ? "add" : "remove"]("dark")

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark")
      localStorage.setItem("theme", isDark ? "dark" : "light")
    })
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    })
  }
</script>

<Layout>
  <main class="px-4 py-8 text-slate-700 dark:text-slate-400 max-w-7xl mx-auto">
    <section class="flex flex-col w-full h-screen justify-center items-center">
      <p class="max-w-56 text-center">
        Hello, I'm <strong>RJ</strong>, a fullstack developer and owner of
        <strong>80A.dev</strong>
      </p>
      <DownIcon className="text-2xl animate-bounce mt-10" />
    </section>
    <section class="flex flex-col w-full justify-center items-center gap-16 py-16">
      <h2 class="font-bold text-3xl">Projects</h2>
      <ProjectSlideshow client:load />
    </section>
    <section
      class="flex flex-col w-full justify-center items-center gap-16 py-16"
    >
      <h2 class="font-bold text-3xl">About me</h2>
      <div class="flex flex-col items-center gap-4 max-w-[500px]">
        <Avatar src="/80ADEV.PNG" alt="80ADevLogo" client:load />
        <p class="text-center">
          My name is <strong>RJ</strong>, I started programming
          in 2016 when I studied IT in University and I currently specialize in web development.
        </p>
        <p class="text-center">
          I am passionate about technology, learning new things, video games and pop culture.
        </p>
      </div>
    </section>
    <section
      class="flex flex-col w-full justify-center items-center gap-16 py-16"
    >
      <h2 class="font-bold text-3xl">Bio</h2>
      <Timeline content={BIO} />
    </section>
    <section
      class="flex flex-col w-full justify-center items-center gap-16 py-16"
    >
      <h2 class="font-bold text-3xl">Posts</h2>
      <PostsSection client:load />
    </section>
  </main>
  <footer class="max-w-7xl mx-auto">
    <p class="text-center text-sm text-slate-700 dark:text-slate-400 p-4 mt-28">
      Made with &#x2665; by RJ&nbsp;| @80adev &middot; Forked from
      <a
        class="underline hover:text-slate-900 dark:hover:text-slate-200"
        href="https://github.com/slydragonn/alogocode.site"
        target="_blank"
        rel="noreferrer"
      >
        slydragonn/alogocode.site
      </a>
    </p>
  </footer>
</Layout>
